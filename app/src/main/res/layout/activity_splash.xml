<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashscreen.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="@dimen/app_logo_width"
        android:layout_height="@dimen/app_logo_height"
        android:layout_centerInParent="true"
        android:contentDescription="@string/DOG_LOGO_IMAGE"
        android:src="@drawable/app_logo"/>
    <ImageView
        android:id="@+id/iv_text"
        android:layout_width="@dimen/woof_text_width"
        android:layout_height="@dimen/woof_text_height"
        android:src="@drawable/woof_text"
        android:layout_below="@id/iv_splash_logo"
        android:contentDescription="@string/LOGO_TEXT"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/SPLASH_INFO"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>